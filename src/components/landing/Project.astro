---
import { ExternalLink } from "lucide-astro";
import { Image } from 'astro:assets';

const { title, description, technologies, link } = Astro.props;
---

<div class="card bg-base-100 card-md shadow-sm">
    <div class="card-body">
        <div class="flex justify-between mb-4">
            <div class="flex items-center gap-4">
                <Image src={`${link}/favicon.ico`} alt={title} width={36} height={36} class="w-[36px] h-[36px]" />
                <div class="flex flex-col gap-2">
                    <h2 class="card-title">{title}</h2>
                    <p>{description}</p>
                </div>
            </div>
            <a href={link} target="_blank">
                <button class="btn btn-sm btn-square"><ExternalLink size={16} /></button>
            </a>
        </div>
        <div class="flex flex-wrap gap-2">
            {technologies.map((technology: string) => (
                <span class="badge">{technology}</span>
            ))}
        </div>
    </div>
</div>
